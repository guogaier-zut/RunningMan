<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddee1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:background="@mipmap/icon"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />
        <EditText
            android:id="@+id/forget_username"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#f8f8f9"
            android:gravity="center"
            android:hint="请输入用户名(邮箱)"
            android:textSize="23dp"></EditText>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <EditText
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/forget_code"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="#f8f8f9"
                android:hint="请输入邮箱的验证码"
                android:textSize="23dp"
                android:gravity="center"
                />
            <Button
                android:id="@+id/forget_get_code"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="10dp"
                android:text="获取验证码"/>
        </LinearLayout>
        <EditText
            android:id="@+id/forget_password"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#f8f8f9"
            android:gravity="center"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textSize="23dp"></EditText>

        <Button
            android:id="@+id/forget_enter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/password"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/go"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">
            <Button
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/forget_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去登录"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
